@model WebApplication1.Models.EvacuationAreaViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="~/css/CreateMapping.css" />
</head>
<body>
    <header class="header">
        <div class="logo">
            <img src="~/images/logo.png" alt="Logo" />
            <div class="logo-text">
                <h1 class="logoName">San Bartolome Barangay Hall</h1>
                <h2 class="logoSubtitle">Barangay Risk Reduction Management System</h2>
            </div>
        </div>
    </header>

    <div class="body">
        <div class="nav-container">
            <div class="nav-bar">
                <div class="nav-item">
                    <a href="/Index" class="@(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "")">Dashboard</a>
                </div>
                <div class="nav-item">
                    <a href="/Index/Mapping" class="@(ViewData["ActivePage"]?.ToString() == "Mapping" ? "active" : "")">Risk Mapping</a>
                </div>
                <div class="nav-item">
                    <a href="/Index/Missing" class="@(ViewData["ActivePage"]?.ToString() == "Missing" ? "active" : "")">Missing Report</a>
                </div>
                <div class="nav-item">
                    <a href="/Index/Evacuess" class="@(ViewData["ActivePage"]?.ToString() == "Evacuess" ? "active" : "")">Evacuess</a>
                </div>
            </div>
        </div>       

        <form asp-action="CreateMapping" method="post">
            <h2>Add Evacuation Area</h2>
            <label>Latitude:</label>
            <input type="text" name="Latitude" value="@Model.Latitude" readonly />

            <label>Longitude:</label>
            <input type="text" name="Longitude" value="@Model.Longitude" readonly />

            <label>Name:</label>
            <input type="text" name="Name" placeholder="Enter evacuation site name" required />

            <label>Type:</label>
            <select name="Type" required>
                <option value="" disabled selected>Select site type</option>
                <option value="primary">Primary</option>
                <option value="temporary">Temporary</option>
                <option value="safe">Safe Zone</option>
            </select>

            <label>Capacity:</label>
            <input type="number" name="Capacity" placeholder="Number of people site can accommodate" />

            <label>Facilities:</label>
            <input type="text" name="Facilities" placeholder="Examples: Restrooms, Shelter, Water Supply" />

            <button type="submit">Save</button>
        </form>

</body>
</html>

