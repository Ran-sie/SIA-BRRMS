@model IEnumerable<WebApplication1.Models.MissingView1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="~/css/Missing.css" />
</head>
<body>
    <header class="header">
        <div class="logo">
            <img src="~/images/logo.png" alt="Logo" />
            <div class="logo-text">
                <h1 class="logoName">San Bartolome Barangay Hall</h1>
                <h2 class="logoSubtitle">Barangay Risk Reduction Management System</h2>
            </div>
        </div>
    </header>

    <div class="body">
        <div class="nav-container">
            <div class="nav-bar">
                <div class="nav-item">
                    <a href="/Index" class="@(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "")">Dashboard</a>
                </div>
                <div class="nav-item">
                    <a href="/Index/Mapping" class="@(ViewData["ActivePage"]?.ToString() == "Mapping" ? "active" : "")">Risk Mapping</a>
                </div>
                <div class="nav-item">
                    <a href="/Index/Missing" class="@(ViewData["ActivePage"]?.ToString() == "Missing" ? "active" : "")">Missing Report</a>
                </div>
                <div class="nav-item">
                    <a href="/Index/Evacuess" class="@(ViewData["ActivePage"]?.ToString() == "Evacuess" ? "active" : "")">Evacuess</a>
                </div>
            </div>
        </div>


        <!-- Missing -->

        <div class="container">
            <h2 class="page-title">Missing Report Information</h2>

            <!-- SEARCH FORM -->
            @using (Html.BeginForm("MissingReport", "RiskManagement", FormMethod.Get, new { @class = "search-form" }))
            {
                <input type="text" name="query" placeholder="Search..." class="search-input" />
                <button type="submit" class="search-button">Search</button>
            }

            <hr class="divider">

            <!-- TABLE -->
            <div class="table-container">
                <table class="report-table">
                    <thead>
                        <tr>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Date Missing</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var report in Model)
                            {
                                var statusClass = report.Status == "Found" ? "status-found" : "status-missing";
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(report.PhotoUrl))
                                        {
                                            <img src="@Url.Content(report.PhotoUrl)" class="photo" />
                                        }
                                        else
                                        {
                                            <div class="photo-placeholder">P</div>
                                        }
                                    </td>
                                    <td>@report.Name</td>
                                    <td>@report.Age</td>
                                    <td>@report.DateMissing.ToString("yyyy-MM-dd")</td>
                                    <td><span class="@statusClass">@report.Status</span></td>
                                    <td class="actions">
                                        <a class="btn-view" href="/Index/DetailsMissing?Id=@report.Id">View</a>
                                        <a class="btn-update" href="/Index/UpdateMissing?Id=@report.Id">Update</a>
                                        <a class="btn-delete" href="/Index/DeleteMissing?Id=@report.Id" 
                                        onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="no-reports">No reports found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


            <div class="submit-container">
                <button class="btn-submit" onclick="window.location.href='/Index/CreateMissing'" id="openReportModal">Submit Report</button>
            </div>
        </div>
    </div>

</body>
</html>